<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                autoDrawBackground="true" width="100%" height="50">
    <fx:Script>
		<![CDATA[
        import com.andrewgura.vo.TextureVO;
        ]]>
	</fx:Script>

    <s:Rect right="0" width="{(100-TextureVO(data).processingProgress)*width/100}" height="100%"
            visible="{!TextureVO(data).atfData || !TextureVO(data).name || !TextureVO(data).bitmap}">
        <s:fill>
            <s:SolidColor color="#ff0000"/>
        </s:fill>
    </s:Rect>

    <s:HGroup width="100%" height="100%" paddingLeft="5" paddingRight="5" gap="5" verticalAlign="middle">
        <s:BitmapImage source="{TextureVO(data).bitmap}" width="40" height="40"/>
        <s:Label text="{TextureVO(data).name}"/>
        <s:Spacer width="100%"/>
        <s:Label text="{TextureVO(data).width}X{TextureVO(data).height}"/>
    </s:HGroup>

</s:ItemRenderer>
